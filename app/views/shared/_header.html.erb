<header class='top-page-header'>
  <div class='search-bar-contents'>
    <h2 class="search-form">Post</h2>
    <%= link_to image_tag("photo-edit.jpg", class:"furima-icon"),  products_path %>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'Post', new_product_path, class: "category-list" %></li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
      <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
      <li><%= link_to 'logout', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <% else %>
      <li><%= link_to 'login', new_user_session_path, class: "login" %></li>
      <li><%= link_to 'sign-up', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>