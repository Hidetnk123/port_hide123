<div class="products-sell-contents">
  <header class="products-sell-header">
    <%= link_to image_tag('photo-edit.jpg' , size: '185x50'), "/products" %>

  </header>
  <div class="products-sell-main">
      <h2 class="products-sell-title">POST</h2>
      <%= form_with(model: @product, local: true) do |f| %>

      <%# 画像 %>
      <div class="img-upload">
        <div class="weight-bold-text">
          image or video
        </div>
        <div class="click-upload">
          <p>
            画像&動画選択
          </p>
          <%= f.file_field :image, id:'items_image' %>
          <div id = "item-image"></div>
        </div>
      </div>
      <%# /画像 %>
      <%# 内容 %>
      <div class="new-products">
        <div class="products-explain">
          <%= f.text_area :text, class:"products-text", id:"item-info", placeholder:"text", rows:"7" ,maxlength:"1000" %>
        </div>
      </div>
      <%# /内容 %>

      <%# 下部ボタン %>
      <div class="sell-btn-contents">
        <%= f.submit "POST" ,class:"sell-btn" %>
        <%=link_to 'RETURN', root_path, class:"back-btn" %>
      </div>
      <%# /下部ボタン %>
    <% end %>
  </div>
</div>