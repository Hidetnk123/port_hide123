<%= render "shared/header" %>
<div class='box-title'>
  <p class='photo-title'>Photo List</p>
</div>
<div class='box'>
  <div class='photo-list'>
    <div>
      <ul class='item-lists'>
        <% @products.each do |product| %>
            <li class='list'>
              <%= link_to product_path(product.id), method: :get do %>
              <div class='item-img-content'>
                <%= image_tag product.images[0], class:"item-img" %>
              </div>
             <% end %>
              <div class='item-info'>
                <h3 class='item-name'>
                  <%= product.text %>
                </h3>
               </div>
               <div class="tag-top">
                <%= render 'products/tag_list', tag_list: product.tag_list%>
               </div>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<%= render "shared/footer" %>

